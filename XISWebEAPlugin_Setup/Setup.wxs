<?xml version="1.0"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Product Id="*"
		Name="XIS-Web EA Plugin"
		Language="1033"
		Version="1.0.0.0"
		UpgradeCode="74C662DD-9034-4E61-BF7D-F4CB3A999862"
		Manufacturer="João Seixas - Instituto Superior Técnico ">
		<Package Description="#Description"
			Comments="Comments"
			InstallerVersion="200"
			Compressed="yes"/>
		<!--
			Source media for the installation. 
 			Specifies a single cab file to be embedded in the installer's .msi. 
		-->
		<Media Id="1" Cabinet="contents.cab" EmbedCab="yes" CompressionLevel="high"/>
		
		<!-- Installation directory and files are defined in Files.wxs -->
		<Directory Id="TARGETDIR" Name="SourceDir"/>
		
		<Feature Id="Complete"
		         Title="XIS-Web EA Plugin"
		         Description="XIS-Web Framework allows the generation of Responsive Web Applications code from UML models."
		         Level="1">
		         <ComponentRef Id="XISWebEAPluginFiles"/>
				 <ComponentRef Id="XISWebEAPluginRegEntries"/>
				 <ComponentRef Id="XISWebMDGFiles"/>
				 <ComponentRef Id="XISWebProfileFiles"/>
		</Feature>
		
		<!--
 			Using the Wix UI library.

			WixUI_Minimal is the most basic of the WixUI stock dialog sets.
 			Its sole dialog combines the welcome and license-agreement 
			dialogs and omits the feature customization dialog. 
			WixUI_Minimal is appropriate when your product has no optional 
			features.
 		-->
		<UIRef Id="WixUI_Minimal"/>
	</Product>
</Wix>
